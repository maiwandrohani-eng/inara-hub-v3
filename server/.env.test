# ============================================================================
# DATABASE CONFIGURATION (Required)
# ============================================================================
# PostgreSQL connection string
# Local: postgresql://user:password@localhost:5432/inara_platform
# Neon (production): postgresql://user:password@host.us-east-2.aws.neon.tech/dbname?sslmode=require
DATABASE_URL="postgresql://user:password@localhost:5432/inara_platform"

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=5000
NODE_ENV=development
VERCEL=false

# ============================================================================
# AUTHENTICATION (Required)
# ============================================================================
# JWT secret - min 32 characters, change in production
JWT_SECRET="your-super-secret-jwt-key-min-32-characters-change-in-prod"
JWT_EXPIRES_IN="7d"

# ============================================================================
# CORS CONFIGURATION (Important for Vercel)
# ============================================================================
# Frontend domain - comma-separated list of allowed origins
# Local: http://localhost:3000
# Vercel: https://your-app.vercel.app,https://custom-domain.com
CORS_ORIGIN="http://localhost:3000"

# ============================================================================
# CLOUDFLARE R2 STORAGE (Required for file uploads)
# ============================================================================
# Get these from Cloudflare Dashboard > R2 > Manage API Tokens
R2_ACCOUNT_ID="your-account-id"
R2_ACCESS_KEY_ID="your-access-key-id"
R2_SECRET_ACCESS_KEY="your-secret-access-key"
R2_BUCKET_NAME="inara-uploads"
R2_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"

# Optional: Public URL for R2 (custom domain for public file access)
# If not set, files are served via /api/uploads route
R2_PUBLIC_URL="https://your-custom-domain.com"

# ============================================================================
# AI INTEGRATION (Optional)
# ============================================================================
# For course generation and INARA Bot intelligence
AI_API_KEY=""
AI_API_URL="https://router.huggingface.co/v1/chat/completions"
AI_MODEL="mistralai/Mistral-7B-Instruct-v0.2"

# ============================================================================
# FILE UPLOAD LIMITS (configured in code)
# ============================================================================
# Max JSON body size: 10MB
# Max file upload size: 100MB

